{{#section 'title'}}
<title>{{course.CourseName}}</title>
{{/section}}
{{#section 'css'}}
<link href="https://vjs.zencdn.net/7.10.2/video-js.css" rel="stylesheet" /> {{!-- Videojs CDN --}}
{{/section}}
{{#section 'js'}}
{{!-- Videojs CDN --}}
<script src="https://vjs.zencdn.net/7.10.2/video.min.js"></script>
{{!-- Star rating SVG setup --}}
<script>
$(".rating").starRating({
  totalStars: 5,
  readOnly: true,
  starSize: 15
});
</script>
{{/section}}

<div class="container-fluid min-vh-100">
  <div class="container mt-2 bg-dark" style="border-radius: 0.2rem;">
    <div class="row p-1">
      <div class="col-lg-8 py-0 px-1">
        <div class="card text-white bg-dark">
          <div class="card-body p-2">
            <div class="d-flex flex-row flex-wrap">
              <small class="mr-1 font-weight-bold">
                <a class="text-light" href="/courses/{{course.Category._id}}">{{course.Category.CatName}}</a>
              </small>
            </div>
            <h4 class="card-title mb-1">{{course.CourseName}}</h4>
          </div>
          <img class="card-img-bottom" src="/p/imgs/courses/{{course._id}}/thumbnail.jpg" alt="">
        </div>
        
      </div>
      <div class="col-lg-4 p-0">
        <div class="card h-100 bg-light overflow-auto">
          <div class="card-body d-flex flex-column">
            <div class="flex-fill">
              <div>
                <p class="card-text">{{course.TinyDes}}</p>
              </div>      
            </div>
            <div>
              <p class="mb-0">
                <small>
                  {{#if course.Status}}
                  <span class="badge badge-success">Completed</span>
                  {{else}}
                  <span class="badge badge-danger">Incompleted</span>
                  {{/if}}
                </small>
              </p>
              <p class="mb-0">
                <small>
                  <span class="rating" data-rating="{{course.RatingAverage}}"></span> ({{course.RatingCount}})
                </small>
              </p>
              <p class="mb-0 font-weight-bold">
                <small>
                <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                <a href="#teacher" class="text-info font-weight-bold">Teacher {{course.Teacher.Name}}</a>
                </small>
              </p>
              <p class="mb-0">
                <small>
                  <i class="fa fa-users" aria-hidden="true"></i> {{course.RegisterCount}} students
                </small>
              </p>
              <p class="mb-0">
                <small>
                <i class="fa fa-refresh" aria-hidden="true"></i> Last Update {{{course.LastUpdate}}}
                </small>
              </p>
            </div>
            <h4 class="text-dark font-weight-bold d-flex align-items-center">
              {{#if course.Discount}}
                {{priceFormat (format (minus course.Price (div (multiply course.Price course.Discount) 100)))}}
                <small class="ml-2">
                  <del>{{priceFormat (format course.Price)}}</del>
                  <span class="ml-2 badge badge-success">-{{course.Discount}}%</span>
                </small>
              {{else}}
                {{#if course.Price}}
                {{priceFormat (format course.Price)}}
                {{else}}
                Free
                {{/if}}
              {{/if}}
            </h4>
            <form id="formRegister" method="POST" action="">
              <button type="submit" class="btn btn-success w-100">Register Course</button>
            </form>
          </div>
        </div>
      </div>
    </div>  
  </div>

  <div class="container mt-4">
    <div class="row">
      <div class="col-lg-9">
        <section id="full-description">
          <h4>Detail Description</h4>
          <div>
            {{{course.FullDes}}}
          </div>
        </section>
        <section id="content" class="mb-2">
          <h4>Course contents</h4>
          <ul class="list-group">
            {{#each chapters}}
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
              <p class="mb-0">{{ChapterName}}</p>
              <div>
                {{#unless VideoLink}}
                <span class="badge badge-secondary badge-pill">Not uploaded</span>
                {{/unless}}

                {{#if Previewable}}
                <a {{#if VideoLink}}href="/course/{{../course._id}}/preview"{{/if}}>
                  <span class="badge badge-primary badge-pill">Previewable</span>
                </a>
                {{/if}}
              </div>
            </li>
            {{else}}
            <li class="list-group-item d-flex justify-content-center align-items-center">
              <p class="mb-0">There are no chapters in this course yet</p>
            </li>
            {{/each}}
          </ul>
        </section>
        <section id="curriculum" class="mb-2">
          <h4>Curriculum</h4>
          <div>
            {{{course.Curriculum}}}
          </div>
        </section>
        <section id="teacher" class="mb-2">
          <h4>About Teacher</h4>
          <div>
            
          </div>
        </section>
        <section id="reviews" class="mb-2">
          <h4>Reviews</h4>
          <div>
            
          </div>
        </section>
      </div>
      <div class="col-lg-3">
        <section id="mores" class="mb-2">
          <h4>More in {{course.Category.CatName}}</h4>
          <div class="p-1">
            {{#each mores}}
            <div class="card m-2">
              <img class="card-img-top" width="240" height="120" 
                src="/p/imgs/courses/{{_id}}/thumbnail.jpg" 
                alt="course image">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{CourseName}}</h6>
                <div class="card-text d-flex flex-column">
                  <p class="mb-1 text-info font-weight-bold">
                  {{#if Discount}}
                    {{priceFormat (format (minus Price (div (multiply Price Discount) 100)))}}
                    <small>
                      <del>{{priceFormat (format Price)}}</del>
                      <span class="ml-1 badge badge-success">-{{Discount}}%</span>
                    </small>
                  {{else}}
                    {{#if course.Price}}
                    {{priceFormat (format Price)}}
                    {{else}}
                    Free
                    {{/if}}
                  {{/if}}
                  </p>
                  <small><i class="fa fa-graduation-cap" aria-hidden="true"></i> {{Teacher}}</small>
                  <div class="d-flex justify-content-between">
                    <small>
                      <span class="rating" data-rating="{{RatingAverage}}"></span>
                      ({{RatingCount}})
                    </small>
                  </div>
                  <small class="font-weight-bold">
                    <a style="z-index: 9000; position: relative;" href="/courses/{{Category._id}}">{{Category.CatName}}</a>
                  </small>
                  <a class="stretched-link" href="/course/{{_id}}"></a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </section>
      </div>
    </div>
  </div>
</div>
