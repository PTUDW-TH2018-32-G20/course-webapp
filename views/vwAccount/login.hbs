{{#section 'title'}}
<title>Login</title>
{{/section}}

{{#section 'css'}}

{{/section}}

<body class="bg-light">
  <div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center min-vh-100">
      <div class="col-md-6">
        {{#if err_message}}
        <div class="alert alert-warning alert-dismissible mb-0 fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          {{err_message}}
        </div>
        {{/if}}
        <div class="card px-1 py-2">
          <div class="card-body">
            
            <form class="main-form" action="" method="post">
              <h2 class="text-center"><b>Login</b></h2>
              <div class="form-group">
                <label for="txtEmail"><b>Email</b></label>
                <input class="form-control" id="txtEmail" type="text" placeholder="Enter your email" name="Email" required autofocus>
              </div>

              <div class="form-group">
                <label for="txtPassword"><b>Password</b></label>
                <input class="form-control" id="txtPassword" type="password" placeholder="Enter your password" name="Password" required>
              </div>

              <button class="btn btn-success w-100" type="submit">Login</button>
            </form>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</body>
